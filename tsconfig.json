{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "src",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es2016",
			"dom"
		],
		"module": "es2015",
		"moduleResolution": "node",
		"outDir": "./build/tsc",
		"plugins": [
			{
				"name": "tslint-language-service"
			}
		],
		"sourceMap": true,
		"target": "es5",
	    "strict": true,
		"typeRoots": [
			"node_modules/@types"
		]
	}
}
